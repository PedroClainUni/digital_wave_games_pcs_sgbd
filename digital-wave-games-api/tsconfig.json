{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "build",
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
        ]
      },
    },
    "include": [
      "src/**/*.ts", "src/server.js", "src/server.js", "server.ts"
    ]
  }
  